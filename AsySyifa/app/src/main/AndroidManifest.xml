<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_logo4"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo4_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AsySyifa"
        tools:targetApi="31">
        <activity
            android:name="com.mobile.asy_syifa.ui.materi.VideoActivity"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:exported="false" />
        <activity
            android:name="com.mobile.asy_syifa.ui.soal.DetailSoalActivity"
            android:exported="false" />
        <activity
            android:name="com.mobile.asy_syifa.ui.about.AboutActivity"
            android:exported="false" />
        <activity
            android:name="com.mobile.asy_syifa.ui.materi.MateriActivity"
            android:exported="false" />
        <activity
            android:name="com.mobile.asy_syifa.ui.soal.SoalActivity"
            android:exported="false" />
        <activity
            android:name="com.mobile.asy_syifa.ui.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mobile.asy_syifa.ui.MainActivity"
            android:exported="false" />
    </application>

</manifest>